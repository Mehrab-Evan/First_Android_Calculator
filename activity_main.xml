<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ShowResult"
        android:layout_width="291dp"
        android:layout_height="73dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Two"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="2"
        app:layout_constraintEnd_toEndOf="@+id/AC"
        app:layout_constraintStart_toStartOf="@+id/AC"
        app:layout_constraintTop_toBottomOf="@+id/AC" />

    <Button
        android:id="@+id/Minus"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Zero"
        app:layout_constraintTop_toBottomOf="@+id/Nine" />

    <Button
        android:id="@+id/Seven"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/Eight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Four" />

    <Button
        android:id="@+id/Five"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="5"
        app:layout_constraintEnd_toEndOf="@+id/Two"
        app:layout_constraintStart_toStartOf="@+id/Two"
        app:layout_constraintTop_toBottomOf="@+id/Two" />

    <Button
        android:id="@+id/Eight"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="8"
        app:layout_constraintEnd_toEndOf="@+id/Five"
        app:layout_constraintStart_toStartOf="@+id/Five"
        app:layout_constraintTop_toBottomOf="@+id/Five" />

    <Button
        android:id="@+id/Six"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Five"
        app:layout_constraintTop_toBottomOf="@+id/Three" />

    <Button
        android:id="@+id/Nine"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Eight"
        app:layout_constraintTop_toBottomOf="@+id/Six" />

    <Button
        android:id="@+id/Four"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/Five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/One" />

    <Button
        android:id="@+id/Plus"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/Zero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Seven" />

    <Button
        android:id="@+id/Divide"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="/"
        app:layout_constraintEnd_toStartOf="@+id/Equal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Plus" />

    <Button
        android:id="@+id/Equal"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="@+id/Zero"
        app:layout_constraintStart_toStartOf="@+id/Zero"
        app:layout_constraintTop_toBottomOf="@+id/Zero" />

    <Button
        android:id="@+id/Multiply"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Equal"
        app:layout_constraintTop_toBottomOf="@+id/Minus" />

    <Button
        android:id="@+id/Zero"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/Eight"
        app:layout_constraintStart_toStartOf="@+id/Eight"
        app:layout_constraintTop_toBottomOf="@+id/Eight" />

    <Button
        android:id="@+id/One"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/Two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AC" />

    <Button
        android:id="@+id/AC"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:text="AC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShowResult" />

    <Button
        android:id="@+id/Three"
        android:layout_width="97dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Two"
        app:layout_constraintTop_toBottomOf="@+id/AC" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mevan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Equal" />

</androidx.constraintlayout.widget.ConstraintLayout>
